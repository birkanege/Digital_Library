<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.digitallibrary.controller.DashboardController"
            stylesheets="@styles/dashboard-style.css">
    <children>
        <VBox spacing="15" alignment="CENTER" prefWidth="400" prefHeight="300">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label fx:id="welcomeLabel" text="Hoş Geldiniz!" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <Button fx:id="searchBooksButton" text="Kitap Ara" onAction="#handleSearchBooks" />
            <Button fx:id="borrowedBooksButton" text="Ödünç Alınan Kitaplar" onAction="#handleBorrowedBooks" />
            <Button fx:id="onlineReadingsButton" text="Çevrim İçi Okunan Kitaplar" onAction="#handleOnlineReadings" />
            <Button fx:id="viewUsersButton" text="Tüm Kullanıcılar" onAction="#handleViewUsers"/>
            <Button fx:id="friendsButton" text="Arkadaşlar ve Kitaplar" onAction="#handleFriends" />
            <Button fx:id="addRandomBookButton" text="Random Kitap Ekle" onAction="#handleAddRandomBook" />
            <Button fx:id="logoutButton" text="Çıkış Yap" onAction="#handleLogout" />
        </VBox>
    </children>
</AnchorPane>