<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.digitallibrary.controller.RegisterController">
<children>
    <VBox spacing="10" alignment="CENTER" prefWidth="300" prefHeight="250">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Kayıt Ol" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField" promptText="Kullanıcı Adı" />
        <PasswordField fx:id="passwordField" promptText="Şifre" />
        <PasswordField fx:id="confirmPasswordField" promptText="Şifre Tekrar" />

        <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/>

        <Button text="Kayıt Ol" onAction="#handleRegister" />
        <Button text="İptal" onAction="#handleCancel" />
    </VBox>
</children>
</AnchorPane>